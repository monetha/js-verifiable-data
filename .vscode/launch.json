{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "address": "127.0.0.1",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/source",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Truffle (HARMONY) Current File",
      "program": "${workspaceFolder}/integration-tests/node_modules/.bin/truffle",
      "args": [
        "test",
        "${file}",
        "--network",
        "harmony_testnet",
        "--verbose"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}\\integration-tests\\node_modules\\truffle\\build\\cli.bundled.js"
      },
      "cwd": "${workspaceFolder}\\integration-tests",
      "outFiles": [
        "${workspaceFolder}/integration-tests/test/**/*"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require", "ts-node/register",
        "--timeout", "999999",
        "--colors", "--recursive",
        "${file}"
      ],
      "cwd": "${workspaceFolder}\\integration-tests",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}